<UserControl x:Class="Bank.View.ClientOverview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Bank.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:ClientOverviewVM />
    </UserControl.DataContext>
    
<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Grid Column 0-->
        <Border Grid.Row="0" Grid.Column="0" BorderThickness="2" BorderBrush="#cccccc" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid>
                    <TextBlock Grid.Column="0">IDENTIFCATION INFORMATION</TextBlock>
                    <Button Grid.Column="1" Width="25">Edit</Button>
                </Grid>
                
                <StackPanel Grid.Row="1">
                    <TextBlock >Voice Authentication</TextBlock>
                    <TextBlock >Re-record | Unenroll</TextBlock>
                    <TextBlock >NAME</TextBlock>
                    <TextBlock >Client Name</TextBlock>
                    <TextBlock >Do Not Call Status</TextBlock>
                    <TextBlock >Share with Affiliates</TextBlock>
                    <TextBlock >DATE OF BIRTH</TextBlock>
                    <TextBlock Grid.Column="0">xx/xx/xxxx (xx years old)</TextBlock>
                    <TextBlock Grid.Column="0">MOTHERS MAIDEN NAME</TextBlock>
                    <TextBlock Grid.Column="0">Name</TextBlock>
                    <TextBlock Grid.Column="0">CLIENT SINCE</TextBlock>
                    <TextBlock Grid.Column="0">xx/xx/xxxx (xx years, xx months)</TextBlock>
                    <TextBlock Grid.Column="0">DRIVER'S LICENSE</TextBlock>
                    <TextBlock Grid.Column="0">License #</TextBlock>
                    <TextBlock Grid.Column="0">Exp. Date - xx/yyyy</TextBlock>
                    <TextBlock Grid.Column="0">ALIAS</TextBlock>
                    <TextBlock Grid.Column="0">Name</TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" BorderThickness="2 0 2 2" BorderBrush="#cccccc" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <Grid>
                    <TextBlock Grid.Column="0">CONTACT INFORMATION</TextBlock>
                    <Button Grid.Column="1" Width="25">Edit</Button>
                </Grid>

                <StackPanel Grid.Row="1">
                    <TextBlock>PHONE NUMBERS</TextBlock>
                    <TextBlock>Home: xxx-xxx-xxxx</TextBlock>
                    <TextBlock>Business: xxx-xxx-xxxx</TextBlock>
                    <TextBlock>Dial: xxx-xxx-xxxx</TextBlock>
                    <TextBlock>PRIMARY EMAIL</TextBlock>
                    <TextBlock>email@email.com</TextBlock>
                    <TextBlock>HOME / LEGAL</TextBlock>
                    <TextBlock>xxx road st</TextBlock>
                    <TextBlock>city, st zip</TextBlock>
                    <TextBlock>CLIENT'S DOMICILE BRANCH</TextBlock>
                    <TextBlock>city, st</TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" BorderThickness="2 0 2 2" BorderBrush="#cccccc" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <Grid>
                    <TextBlock Grid.Column="0">EMPLOYMENT INFORMATION</TextBlock>
                    <Button Grid.Column="1" Width="25">Edit</Button>
                </Grid>

                <StackPanel Grid.Row="1">
                    <TextBlock>EMPLOYMENT STATUS</TextBlock>
                    <TextBlock>Employed / Unemployed</TextBlock>
                    <TextBlock>EMPLOYER NAME</TextBlock>
                    <TextBlock>Name / N/A</TextBlock>
                    <TextBlock>OCCUPATION/POSITION</TextBlock>
                    <TextBlock>Name / N/A</TextBlock>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Grid Column 1-->
        <Border Grid.Row="0" Grid.Column="1" BorderThickness="0 2 2 2" BorderBrush="#cccccc" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0">Brokerage Accounts</TextBlock>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TableHeader}">Account Number</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Nickname</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Balance</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Password</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Type</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Registration Label</TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" BorderThickness="0 0 2 2" BorderBrush="#cccccc" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Grid.Row="0">Notes</TextBlock>
                    <Button Command="{Binding ViewNotesCommand}">View All Notes</Button>
                    <Button Command="{Binding AddNotesCommand}">New Note</Button>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TableHeader}">Note</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Account</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Created</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Rep ID</TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.Column="1" BorderThickness="0 0 2 2" BorderBrush="#cccccc" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock>Recent Transactions</TextBlock>
                <Button>More</Button>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TableHeader}">Date</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Action</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Symbol</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Quantity</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Price</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Amount</TextBlock>
                    <TextBlock Style="{StaticResource TableHeader}">Account</TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</ScrollViewer>
</UserControl>
